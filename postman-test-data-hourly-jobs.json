{
  "test_scenarios": {
    "scenario_1_garden_cleaning": {
      "description": "Garden cleaning job that takes longer than estimated (2 hours estimated, 3 hours actual)",
      "steps": {
        "1_create_job": {
          "method": "POST",
          "url": "{{base_url}}/jobs",
          "headers": {
            "Authorization": "Bearer {{owner_jwt_token}}",
            "Content-Type": "application/json"
          },
          "body": {
            "title": "Garden Cleaning Service",
            "category": "GARDENING",
            "date_and_time": "2024-01-15T10:00:00Z",
            "price": 20.00,
            "payment_type": "Hourly",
            "job_type": "hourly",
            "location": "123 Main Street, New York, NY 10001",
            "latitude": 40.7128,
            "longitude": -74.0060,
            "estimated_time": "2 hours",
            "description": "Clean the garden, remove weeds, trim bushes, and dispose of garden waste. The garden is medium-sized with some overgrown areas."
          }
        },
        "2_submit_counter_offer": {
          "method": "POST",
          "url": "{{base_url}}/jobs/{{job_id}}/counter-offer",
          "headers": {
            "Authorization": "Bearer {{helper_jwt_token}}",
            "Content-Type": "application/json"
          },
          "body": {
            "amount": 20.00,
            "type": "hourly",
            "note": "I can complete this garden cleaning job for $20/hour. I have experience with garden maintenance and will bring my own tools."
          }
        },
        "3_accept_offer": {
          "method": "POST",
          "url": "{{base_url}}/jobs/{{job_id}}/accept-offer",
          "headers": {
            "Authorization": "Bearer {{owner_jwt_token}}",
            "Content-Type": "application/json"
          },
          "body": {
            "counter_offer_id": "{{counter_offer_id}}"
          }
        },
        "4_start_job": {
          "method": "PATCH",
          "url": "{{base_url}}/jobs/{{job_id}}/start",
          "headers": {
            "Authorization": "Bearer {{helper_jwt_token}}"
          }
        },
        "5_check_time_tracking_during": {
          "method": "GET",
          "url": "{{base_url}}/jobs/{{job_id}}/time-tracking",
          "headers": {
            "Authorization": "Bearer {{owner_jwt_token}}"
          }
        },
        "6_complete_job": {
          "method": "PATCH",
          "url": "{{base_url}}/jobs/{{job_id}}/complete",
          "headers": {
            "Authorization": "Bearer {{helper_jwt_token}}"
          }
        },
        "7_check_final_results": {
          "method": "GET",
          "url": "{{base_url}}/jobs/{{job_id}}/time-tracking",
          "headers": {
            "Authorization": "Bearer {{owner_jwt_token}}"
          }
        }
      },
      "expected_results": {
        "estimated_hours": 2.0,
        "hourly_rate": 20.00,
        "estimated_cost": 40.00,
        "actual_hours": 3.0,
        "final_cost": 60.00,
        "overage": 20.00
      }
    },
